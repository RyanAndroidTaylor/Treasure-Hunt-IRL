<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_treasure_hunt_container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="A Title"/>

    <TextView
        android:id="@+id/view_treasure_hunt_container_treasure_chest_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="18 Treasure chests to find"/>

    <TextView
        android:id="@+id/view_treasure_hunt_container_area_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Treasure hunt diameter 1.3 miles"/>

    <FrameLayout
        android:id="@+id/view_treasure_hunt_container_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>