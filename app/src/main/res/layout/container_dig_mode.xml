<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dig_mode_container_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"/>

    <FrameLayout
        android:id="@+id/dig_mode_container_dig_progress_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:background="#CC000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/dig_mode_container_dig_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"/>
    </FrameLayout>

    <Button
        android:id="@+id/dig_mode_container_dig"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_normal"
        android:background="@color/colorAccent"
        android:text="@string/dig"/>
</FrameLayout>