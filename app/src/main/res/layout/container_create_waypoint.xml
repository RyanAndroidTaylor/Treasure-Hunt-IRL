<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/create_waypoint_container_map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"/>

    <com.dtprogramming.treasurehuntirl.ui.views.AdjustableValueView
        android:id="@+id/create_waypoint_container_adjust_lat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:drawableLeft="@drawable/ic_minus_black_24dp"
        android:drawableRight="@drawable/ic_plus_black_24dp"/>

    <com.dtprogramming.treasurehuntirl.ui.views.AdjustableValueView
        android:id="@+id/create_waypoint_container_adjust_lng"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:drawableLeft="@drawable/ic_minus_black_24dp"
        android:drawableRight="@drawable/ic_plus_black_24dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/create_waypoint_container_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/create_waypoint_container_save"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/save"/>
    </FrameLayout>
</LinearLayout>