<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/view_treasure_chest_container_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_normal"
        android:src="@drawable/closed_chest"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_treasure_chest_treasure_items"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_normal"/>

    <EditText
        android:id="@+id/view_treasure_chest_container_edit_pass_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"/>

    <Button
        android:id="@+id/view_treasure_chest_container_treasure_chest_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"/>
</LinearLayout>